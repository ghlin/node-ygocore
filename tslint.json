{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-standard"
    ],
    "jsRules": {},
    "rules": {
        "variable-name": [ true, "allow-snake-case", "allow-leading-underscore" ],
        "trailing-comma": [ false ],
        "semicolon": [ false ],
        "quotemark": [ true, "single" ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ]
    },
    "rulesDirectory": []
}

